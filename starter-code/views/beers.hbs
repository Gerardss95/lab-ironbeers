<div class="beers-container">
  {{#each beersFromApi }}   
  <div class="beer">

        <img class="beer-image" src="{{ this.image_url }}" alt="{{ this.name }}">
       <div class="beer-info">

        <div class="beer-name">{{this.name}}</div>
        <div class="tagline">{{ this.tagline }}</div>
        <div class="description">{{ this.description }}</div>

       </div>
  </div>
   
  {{/each}}
</div>
